<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
    tools:context="cnpm.com.ires.activities.TableDetailActivity"
    tools:showIn="@layout/app_bar_table_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/txtMenuSum"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Tá»”NG: "
            android:textColor="#ef0010"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTableCost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/txtMenuSum"
            android:gravity="center_vertical|right"
            android:text="100000VND"
            android:textColor="#ef0010"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/txtMenuSum"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPayment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/table_selector"
                android:text="Payment"
                android:textAllCaps="false" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/table_selector"
                android:text="Menu"
                android:textAllCaps="false" />

        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fmContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="8"></FrameLayout>

</LinearLayout>
